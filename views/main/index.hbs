<!-- BODY TOP -->
  <section id="body_top" class="container ">
    <div class="row ">
      <div class="col-md-5">
        <h1>Subscribe to receive emails about groups that matches your interest</h1>
        <p class="text-muted ">For entrepreneurs, digital markerters influencers</p>
        <div class="card mt-5 ">
          <div class="card-body p-2 ">
            <form action=" " class="form-inline ">
              <input type="email " class="borderless " placeholder="Enter email address ">
              <button type="submit " class="btn btn-custom ml-auto font-weight-bold ">Subscribe</button>
            </form>
          </div>
        </div>
      </div>
      <div class="offset-md-1 col-md-6 d-flex justify-content-center work-img">
        <img src="/images/illustrate4.svg" alt=" " class="">
      </div>
    </div>
  </section>

  <!-- PAY TO AGENT -->
  <section id="pay" class="my-5 d-flex justify-content-center align-items-center ">
    <div class="d-flex align-items-center flex-column ">
      <h2>Pay an agent to apply</h2>
      <p class="text-muted my-3 w-75 text-center ">Secure the job faster and easier. Let an agent help you apply to get more probability of sucess</p>
      <a href=" " class="btn btn-custom px-3 ">Contact agent</a>
    </div>
  </section>

  <!-- JOB LISTINGS -->
  <section id="job_listings" class="my-5 ">
    <div class="container ">
      <h2 class="mb-4">Trending Channels</h2>
      <form text-center  action=" " class="form-inline ">
        <span class="font-weight-bold mr-3 ">Filter</span>
        <select name=" " id="" class="form-control w-40 ">
          <option selected>Select job role</option>
        </select>
        <select name=" " id="" class="form-control w-40 ">
          <option selected>Select group type</option>
        </select>
        <input type="submit" name="" value="Search" class="form-control">
      </form>
      <div class="mt-4 ">
        <div class="row ">

          {{# each groups }} 
          {{# each this }}
          <div class="col-md-4 my-3 ">
            <div class="card p-3 ">
              <div class="d-flex justify-content-between" data-toggle="modal" data-target="#jobModal">
                <img src="/images/lyft.svg " alt=" ">
                <span class="font-weight-bold ">{{ this.groupname }}</span>
                  <a class="text-muted" id="btn_{{@index}}" data-toggle="modal" data-target="#myModal{{@index}}" href="/">{{ this.groupplatform }}</a>
              </div>
            </div>
          </div>


          {{!-- <!-- Button trigger modal -->
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            Launch demo modal
          </button> --}}

          <!-- Modal -->
          <div class="modal fade"  id="myModal{{@index}}" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">{{ this.groupname }}</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  {{ this.groupinfo }}
                </div>
                <div class="modal-footer">
                  <a  target="_blank" href={{ this.groupurl }}>
                    <button type="button" class="btn btn-secondary">Join</button>
                  </a>   
                  <button type="button" class="btn btn-primary">{{ this.groupplatform }}</button>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
