                {{#if hasErrors}}
                  <div class="alert alert-danger">
                      {{# each messages }}
                          <p>{{this}}</p>
                      {{/each}}
                  </div>
                {{/if}}
                <form method="POST" action="/signup" class="mt-3">
              <div class="form-group">
